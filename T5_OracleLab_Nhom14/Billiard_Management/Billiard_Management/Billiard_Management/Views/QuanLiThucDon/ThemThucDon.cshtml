@model Billiard_Management.Models.Thucdon

@{
    ViewData["Title"] = "ThemThucDon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="ThemThucDon" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mathucdon" class="control-label"></label>
                <input asp-for="Mathucdon" class="form-control" />
                <span asp-validation-for="Mathucdon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenthucdon" class="control-label"></label>
                <input asp-for="Tenthucdon" class="form-control" />
                <span asp-validation-for="Tenthucdon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donvitinh" class="control-label"></label>
                <input asp-for="Donvitinh" class="form-control" />
                <span asp-validation-for="Donvitinh" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hinh" class="control-label"></label>
                <input asp-for="Hinh" class="form-control" id="fileUpLoad" name="fileUpLoad" type="file" accept="image/*" required />
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ghichu" class="control-label"></label>
                <input asp-for="Ghichu" class="form-control" />
                <span asp-validation-for="Ghichu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <span style="color:red"><strong>@ViewBag.Notice</strong></span>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" >Thêm</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="QuanLiThucDon">Trở về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
