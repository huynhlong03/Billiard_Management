@model Billiard_Management.Models.ViewModel.LoginVM
@{
    ViewData["Title"] = "DangNhap";
   
}
<form asp-action="DangNhap" method="post">
    <div class="form-group">
        <label asp-for="TaiKhoan" class="control-label"></label>
        <input asp-for="TaiKhoan" class="form-control" />
        <span asp-validation-for="TaiKhoan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MatKhau" class="control-label"></label>
        <input asp-for="MatKhau" class="form-control" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>
    <div class="form-group">
        <span style="color:red"><strong>@ViewBag.Notice</strong></span>
    </div>
    <input type="hidden" asp-for="ReturnUrl" />
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div>
    @Html.ValidationSummary()
</div>

